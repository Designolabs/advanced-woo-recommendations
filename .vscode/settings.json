{
    "general": {
      "plugin_name": "Advanced Woo Recommendations",
      "plugin_version": "1.0.0",
      "text_domain": "advanced-woo-recommendations",
      "enable_recommendations": true,
      "enable_cart_recommendations": true,
      "enable_email_integration": true
    },
    "display": {
      "items_per_page": 12,
      "display_type": "grid",  // Options: grid, carousel
      "pagination_enabled": true,
      "responsive_breakpoints": {
        "mobile": 1,
        "tablet": 2,
        "desktop": 4
      }
    },
    "style": {
      "font_family": "Arial, sans-serif",
      "font_size": "16px",
      "color_scheme": {
        "primary_color": "#3498db",
        "secondary_color": "#2ecc71",
        "background_color": "#ffffff",
        "text_color": "#333333"
      },
      "custom_css": ""
    },
    "integration": {
      "api": {
        "recombee_api_key": "your_recombee_api_key_here",
        "recombee_database": "your_recombee_database_id_here"
      },
      "email": {
        "email_provider": "mailchimp",  // Options: mailchimp, brevo, custom_smtp, sendmail
        "mailchimp_api_key": "your_mailchimp_api_key_here",
        "smtp_settings": {
          "smtp_host": "",
          "smtp_port": 587,
          "smtp_username": "",
          "smtp_password": "",
          "smtp_secure": "tls"
        }
      },
      "chatgpt_integration": {
        "enabled": true,
        "api_key": "your_openai_api_key_here",
        "model": "gpt-4"
      }
    },
    "shortcodes": {
      "product_recommendations": "[product_recommendations]",
      "cart_recommendations": "[cart_recommendations]",
      "email_recommendations": "[email_recommendations]"
    },
    "admin": {
      "enable_advanced_settings": true,
      "footer_text": "Made with love by Designolabs Studio",
      "footer_link": "https://designolabs.com"
    },
    "analytics": {
      "enable_analytics": true,
      "track_click_through_rates": true,
      "track_conversion_rates": true,
      "reporting_email": "admin@example.com"
    },
    "translations": {
      "default_language": "en_US",
      "supported_languages": [
        "en_US",
        "es_ES",
        "fr_FR",
        "de_DE"
      ]
    },
    "security": {
      "gdpr_compliance": true,
      "ccpa_compliance": true,
      "data_opt_out_option": true
    }
  }
  